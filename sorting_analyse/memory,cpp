#include <iostream>
#include <vector>
#include <algorithm>
#include <ctime>
#include <cstdlib>

#define SIZE 100000

int main() {
    srand(time(0));
    std::vector<int> arr(SIZE);
    for(long long i = 0; i < SIZE; i++) {
        arr[i] = rand() % 10001;
    }

    clock_t start, end;
    double cpu_time_used;

    start = clock();
    std::sort(arr.begin(), arr.end());
    end = clock();

    cpu_time_used = ((double) (end - start)) / CLOCKS_PER_SEC;

    std::cout << "Time taken to sort " << SIZE << " elements: " << cpu_time_used << std::endl;
    return 0;
}